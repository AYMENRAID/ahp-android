<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <TextView
            android:text="@string/criterion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textViewCriteria"
            android:layout_weight="1"
            android:paddingLeft="60sp"
            android:paddingStart="60sp"
            android:paddingRight="?android:attr/expandableListPreferredChildIndicatorRight"
            android:paddingEnd="?android:attr/expandableListPreferredChildIndicatorRight"
            android:ems="1"
            android:textSize="24sp"/>
    <EditText
            android:text="@string/value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/editTextValue"
            android:gravity="center_horizontal"
            android:layout_weight="2"
            android:ems="1"
            android:textSize="24sp" android:inputType="number"
            android:hint="@string/value" android:autofillHints="@string/value" tools:targetApi="o"/>

</LinearLayout>
